<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">
    <fragment
        android:id="@+id/homeFragment"
        android:name="com.example.quizzit.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_quizSelecterenFragment"
            app:destination="@id/quizSelecterenFragment" />
    </fragment>
    <fragment
        android:id="@+id/quizFragment"
        android:name="com.example.quizzit.quiz.spelen.QuizSpelenFragment"
        android:label="fragment_quizspelen"
        tools:layout="@layout/fragment_quizspelen" >
        <action
            android:id="@+id/action_quizFragment_to_scoreFragment"
            app:destination="@id/scoreFragment"
            app:popUpTo="@+id/quizFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="quizId"
            app:argType="integer"
            android:defaultValue="1" />
    </fragment>
    <fragment
        android:id="@+id/scoreFragment"
        android:name="com.example.quizzit.score.ScoreFragment"
        android:label="ScoreFragment" >
        <action
            android:id="@+id/action_scoreFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
        <argument
            android:name="score"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="aantalVragen"
            app:argType="integer"
            android:defaultValue="0" />
        <argument
            android:name="tijd"
            app:argType="string" />
        <argument
            android:name="quizId"
            app:argType="integer"
            android:defaultValue="0" />
    </fragment>
    <fragment
        android:id="@+id/quizSelecterenFragment"
        android:name="com.example.quizzit.quiz.selecteren.QuizSelecterenFragment"
        android:label="QuizSelecterenFragment">
        <action
            android:id="@+id/action_quizSelecterenFragment_to_quizFragment"
            app:destination="@id/quizFragment" />
    </fragment>
</navigation>